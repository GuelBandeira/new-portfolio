<style lang="scss">
  body {
    overflow-x: hidden;
  }
  // Font Face Declaration
  @font-face {
    font-family: "Furious Styles";
    src: url("../assets/Furious Styles - Demo.ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
  }

  // Variables
  $primary-gradient: linear-gradient(90deg, #6bbaff 0%, #037de9 100%);
  $primary-color: #6bbaff;
  $secondary-color: #037de9;
  $white: #ffffff;
  $black: #1a1a1a;
  $gray: #f8f9fa;

  // Mixins
  @mixin flex-center {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @mixin glass-effect {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
  }

  // Side Projects Section
  .side-projects-section {
    background: #010c23;
    padding: 6rem 0;
    position: relative;
    z-index: 5;
    overflow: hidden;
    transform-style: preserve-3d;
    will-change: transform;

    .v-transition-svg {
      position: absolute;
      top: -320px;
      left: 0;
      width: 100%;
      height: 320px;
      z-index: 1;
      transform: rotate(180deg);

      @media (max-width: 768px) {
        height: 200px;
        top: -200px;
      }

      @media (max-width: 480px) {
        height: 150px;
        top: -150px;
      }
    }

    #blob {
      background-color: white;
      height: 34vmax;
      aspect-ratio: 1;
      position: absolute;
      left: 50%;
      top: 50%;
      translate: -50% -50%;
      border-radius: 50%;
      background: linear-gradient(to right, #6bbaff, #037de9);
      animation: rotate 20s infinite;
      opacity: 0.8;
      z-index: 1;
    }

    #blur {
      height: 100%;
      width: 100%;
      position: absolute;
      z-index: 2;
      backdrop-filter: blur(12vmax);
      top: 0;
      left: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
      position: relative;
      z-index: 4;

      @media (max-width: 768px) {
        padding: 0 1rem;
      }
    }
  }

  .handwritten {
    font-family: "Furious Styles", sans-serif;
  }

  // Parallax and Transition Effects
  .parallax-section {
    position: relative;
    transform-style: preserve-3d;
    will-change: transform;
    transition: filter 0.3s ease;
  }

  // Hero Section
  .hero-section {
    position: relative;
    min-height: 100vh;
    width: 100%;
    overflow: hidden;
    @include flex-center;

    // Background Video
    .background-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -2;
    }

    // Overlay
    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        354deg,
        rgb(0 0 0 / 30%) 0%,
        rgb(0 0 0 / 20%) 50%,
        rgb(0 0 0 / 40%) 100%
      );
      z-index: -1;
    }

    // Content Container
    .hero-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
      z-index: 1;

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto;
        gap: 2rem;
        text-align: center;
      }
    }

    // Text Content
    .hero-text {
      @include flex-center;
      flex-direction: column;
      align-items: flex-start;

      @media (max-width: 768px) {
        align-items: center;
        order: 2;
      }

      .hero-greeting {
        position: absolute;
        top: 0.9rem;
        left: -3rem;
        font-size: clamp(0.9rem, 9.2vw, 2.1rem);
        font-weight: 300;
        margin: 0;
        opacity: 0.9;
        letter-spacing: 1px;
        text-transform: uppercase;
        transform: rotate(-8deg);
        z-index: 2;
        text-shadow: 0 3px 3px black;
        color: #6bbaff;
        @media (max-width: 768px) {
          font-size: clamp(0.9rem, 9.2vw, 1.5rem);
          left: -1.7rem;
          top: 0.9rem;
        }
      }

      .hero-title {
        position: relative;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        color: $white;
        margin: 0;
        margin-bottom: 2rem;
        padding-top: 1rem;
        // text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);

        @media (max-width: 768px) {
          text-align: center;
        }
      }

      .hero-description {
        font-size: clamp(1rem, 2vw, 1.25rem);
        line-height: 1.6;
        color: $white;
        margin: 0;
        margin-bottom: 2rem;
        max-width: 500px;
        @include glass-effect;
        padding: 1.5rem;

        @media (max-width: 768px) {
          text-align: center;
          max-width: 100%;
        }
      }

      .hero-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;

        @media (max-width: 768px) {
          justify-content: center;
        }

        .btn {
          padding: 0.75rem 1.5rem;
          border: none;
          border-radius: 50px;
          font-size: 1rem;
          font-weight: 600;
          cursor: pointer;
          transition: all 0.3s ease;
          text-decoration: none;
          display: inline-block;

          &.btn-primary {
            background: $primary-gradient;
            color: $white;
            box-shadow: 0 4px 15px rgba(107, 186, 255, 0.3);

            &:hover {
              transform: translateY(-2px);
              box-shadow: 0 6px 20px rgba(107, 186, 255, 0.4);
            }
          }

          &.btn-secondary {
            background: transparent;
            color: $white;
            border: 2px solid $primary-color;

            &:hover {
              background: $primary-color;
              transform: translateY(-2px);
            }
          }
        }
      }
    }

    // Image Content
    .hero-image {
      @include flex-center;
      position: relative;

      @media (max-width: 768px) {
        order: 1;
      }

      .profile-photo {
        width: 300px;
        height: 300px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid $primary-color;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;

        @media (max-width: 768px) {
          width: 250px;
          height: 250px;
        }

        @media (max-width: 480px) {
          width: 200px;
          height: 200px;
        }

        &:hover {
          transform: scale(1.05);
          box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
        }
      }

      // Technology Orbit
      .tech-orbit {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 1000px;
        height: 1000px;
        animation: rotate 20s linear infinite;
        z-index: 1;

        @media (max-width: 768px) {
          width: 800px;
          height: 800px;
        }

        @media (max-width: 480px) {
          width: 600px;
          height: 600px;
        }

        .tech-line {
          position: absolute;
          top: 50%;
          left: 50%;
          width: 2px;
          height: 400px;
          transform-origin: 0 0;
          transform: rotate(var(--angle)) translateY(-50%);

          @media (max-width: 768px) {
            height: 350px;
          }

          @media (max-width: 480px) {
            height: 250px;
          }

          &::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, $primary-color, transparent);
            animation: pulse 2s ease-in-out infinite;
          }

          .tech-logo {
            position: absolute;
            bottom: -30px;
            left: 50%;
            transform: translateX(-50%);
            @include flex-center;
            flex-direction: column;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 0.5rem;
            min-width: 80px;
            transition: all 0.3s ease;

            @media (max-width: 768px) {
              min-width: 60px;
              padding: 0.4rem;
            }

            @media (max-width: 480px) {
              min-width: 50px;
              padding: 0.3rem;
            }

            i {
              font-size: 1.5rem;
              color: $primary-color;
              margin-bottom: 0.25rem;

              @media (max-width: 768px) {
                font-size: 1.2rem;
              }

              @media (max-width: 480px) {
                font-size: 1rem;
              }
            }

            span {
              font-size: 0.7rem;
              color: $white;
              font-weight: 700;
              text-align: center;
              line-height: 1;

              @media (max-width: 768px) {
                font-size: 0.6rem;
              }

              @media (max-width: 480px) {
                font-size: 0.5rem;
              }
            }

            &:hover {
              transform: translateX(-50%) scale(1.1);
              background: rgba(107, 186, 255, 0.2);
              box-shadow: 0 0 20px rgba(107, 186, 255, 0.4);
            }
          }
        }
      }
    }
  }

