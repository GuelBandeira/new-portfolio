<script>
  // Parallax effect for hero section
  window.addEventListener("scroll", () => {
    const scrolled = window.pageYOffset;
    const parallax = document.querySelector(".parallax-section") as HTMLElement;
    const sideProjects = document.querySelector(
      ".side-projects-section"
    ) as HTMLElement;
    const speed = scrolled * 0.5;

    if (parallax) {
      parallax.style.transform = `translateY(${speed}px)`;

      // Calculate blur effect based on scroll position
      const windowHeight = window.innerHeight;
      const blurStart = windowHeight * 0.3; // Start blur at 30% of viewport height
      const blurEnd = windowHeight * 0.8; // Full blur at 80% of viewport height

      if (scrolled > blurStart) {
        const blurProgress = Math.min(
          1,
          (scrolled - blurStart) / (blurEnd - blurStart)
        );
        const blurValue = blurProgress * 10; // Max blur of 10px
        parallax.style.filter = `blur(${blurValue}px)`;
        // parallax.style.opacity = `${1 - blurProgress * 0.3}`; // Slight fade out
      } else {
        parallax.style.filter = "blur(0px)";
        // parallax.style.opacity = "1";
      }
    }

    // Parallax effect for side projects section
    if (sideProjects) {
      const sideProjectsSpeed = scrolled * 0.3;
      sideProjects.style.transform = `translateY(${sideProjectsSpeed}px)`;
    }
  });

  /* -- Glow effect -- */

  const blob = document.getElementById("blob");
  const sideProjectsSection = document.querySelector(".side-projects-section");

  window.onpointermove = (event) => {
    const { clientX, clientY } = event;

    if (blob && sideProjectsSection) {
      const rect = sideProjectsSection.getBoundingClientRect();
      const relativeX = clientX - rect.left;
      const relativeY = clientY - rect.top;

      blob.animate(
        {
          left: `${relativeX}px`,
          top: `${relativeY}px`,
        },
        { duration: 3000, fill: "forwards" }
      );
    }
  };

  /* -- Text effect -- */
</script>
