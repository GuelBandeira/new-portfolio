  // Permitir que o blob siga o mouse mesmo quando parado e também ao usar o scroll
  let blobAnimationFrame = null;
  let lastPointer = null;

  function updateBlobPosition(x, y) {
    if (!blob || !myJourneySection) return;

    const rect = myJourneySection.getBoundingClientRect();
    const relativeX = x - rect.left;
    const relativeY = y - rect.top;

    blob.style.left = `${relativeX}px`;
    blob.style.top = `${relativeY}px`;
  }

  function scheduleBlobUpdate(x, y) {
    if (blobAnimationFrame !== null) {
      cancelAnimationFrame(blobAnimationFrame);
    }
    blobAnimationFrame = requestAnimationFrame(() => {
      updateBlobPosition(x, y);
      blobAnimationFrame = null;
    });
  }

  window.onpointermove = (event) => {
    lastPointer = { x: event.clientX, y: event.clientY };
    scheduleBlobUpdate(event.clientX, event.clientY);
  };

  window.addEventListener(
    "scroll",
    () => {
      if (lastPointer) {
        scheduleBlobUpdate(lastPointer.x, lastPointer.y);
      }
    },
    { passive: true }
  );

